<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <beetech.com.wallet.ubersplash.MyVideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <Button
        android:id="@+id/path_costumer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="56dp"
        android:background="@drawable/button"
        android:text="continue as Costumer"
        android:textColor="@color/button_text" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/path_costumer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="78dp"
        android:text="Bee Drive Fusion"
        android:textColor="@color/button_text"
        android:textSize="40sp" />

    <Button
        android:id="@+id/path_driver"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="74dp"
        android:background="@drawable/button"
        android:text="continue as  Driver"
        android:textColor="@color/button_text" />


</RelativeLayout>
